<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.fer.zemris.dipl.controllers.lists.RuleListController">
    <children>
        <Label layoutX="14.0" layoutY="12.0" text="Rule">
            <font>
                <Font name="System Bold" size="25.0" />
            </font>
        </Label>
        <TableView fx:id="tableView" layoutX="14.0" layoutY="50.0" prefHeight="336.0" prefWidth="624.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="207.0" text="Trigger/Rule name" />
                <TableColumn fx:id="descriptionColumn" minWidth="0.0" prefWidth="336.0" text="Description" />
                <TableColumn fx:id="removeColumn" minWidth="0.0" prefWidth="79.0" text="Remove" />
            </columns>
        </TableView>
        <Button fx:id="createNewRule" layoutX="456.0" layoutY="394.0" mnemonicParsing="false" onAction="#switchToCreateNewRule" text="Create new trigger/rule" />
        <Button fx:id="backBtn" layoutX="15.0" layoutY="394.0" mnemonicParsing="false" onAction="#back" text="Back" />
      <Label layoutX="500.0" layoutY="30.0" text="(Double click to edit)" />
    </children>
</AnchorPane>
